<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE sqlMap PUBLIC "-//ibatis.apache.org//DTD SQL Map 2.0//EN" "http://ibatis.apache.org/dtd/sql-map-2.dtd" >
<sqlMap namespace="com.taobao.tae.ewall.job.JobDO">
    <typeAlias alias="jobDO" type="com.taobao.tae.ewall.job.JobDO"/>
    <resultMap id="jobDO.rm" class="jobDO">
        <result column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="jenkins_url" property="jenkinsURL"/>
        <result column="job_type" property="jobType"/>
        <result column="status" property="status"/>
        <result column="features" property="features"/>
        <result column="description" property="description"/>
    </resultMap>

    <!-- selector -->
    <sql id="jobDO.selector">
		SELECT
		id, name, jenkins_url, job_type,status, features, description
		FROM job
    </sql>
    <!-- END selector -->

    <!-- counter -->
    <sql id="jobDO.counter">
		SELECT COUNT(*) FROM job
    </sql>
    <!-- END counter -->

    <sql id="jobDO.get_segment">
        <dynamic prepend="WHERE">
            <isNotNull prepend="AND" property="id">
                id = #id#
            </isNotNull>
            <isNotNull prepend="AND" property="name">
                name = #name#
            </isNotNull>
            <isNotNull prepend="AND" property="jenkinsURL">
                jenkins_url = #jenkinsURL#
            </isNotNull>
            <isNotNull prepend="AND" property="jobType">
                job_type = #jobType#
            </isNotNull>
            <isNotNull prepend="AND" property="status">
                status = #status#
            </isNotNull>
            <isNotNull prepend="AND" property="features">
                features = #features#
            </isNotNull>
            <isNotNull prepend="AND" property="description">
                description = #description#
            </isNotNull>
        </dynamic>
    </sql>

    <!-- INSERT -->
    <insert id="create" parameterClass="jobDO">
        INSERT INTO job(
        name, jenkins_url, job_type,status, features, description, gmt_create, gmt_modified)
        VALUES(
        #name#, #jenkinsURL#, #jobType#,#status#, #features#, #description#, now(), now())
        <selectKey resultClass="int" keyProperty="id">
            SELECT LAST_INSERT_ID() AS ID
        </selectKey>
    </insert>
    <!-- ENE INSERT -->

    <!--鏇存柊 -->
    <update id="update" parameterClass="jobDO">
        UPDATE job
        set gmt_modified = now()
        <dynamic>
            <isNotNull prepend="," property="name">
                name = #name#
            </isNotNull>
            <isNotNull prepend="," property="jenkinsURL">
                jenkins_url = #jenkinsURL#
            </isNotNull>
            <isNotNull prepend="," property="jobType">
                job_type = #jobType#
            </isNotNull>
            <isNotNull prepend="," property="status">
                status = #status#
            </isNotNull>
            <isNotNull prepend="," property="features">
                features = #features#
            </isNotNull>
            <isNotNull prepend="," property="description">
                description = #description#
            </isNotNull>
        </dynamic>
        where id = #id#
    </update>

    <!-- GET -->
    <select id="load" resultMap="jobDO.rm">
        <include refid="jobDO.selector"/>
        WHERE ID = #id#
    </select>

    <select id="find" parameterClass="jobDO" resultMap="jobDO.rm">
        <include refid="jobDO.selector"/>
        <include refid="jobDO.get_segment"/>
    </select>
    <!-- END GET -->

    <delete id="delete" parameterClass="int">
    	DELETE FROM job where id = #id#
    </delete>

    <select id="page_count" resultClass="Integer">
        <include refid="jobDO.counter"/>
        <include refid="jobDO.get_segment"/>
    </select>

    <select id="page" resultClass="Integer" resultMap="jobDO.rm">
        <include refid="jobDO.selector"/>
        <include refid="jobDO.get_segment"/>
        LIMIT #query_page_index#, #query_page_size#;
    </select>
</sqlMap>

